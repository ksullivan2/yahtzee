<Widget>:
    font_name: "/System/Library/Fonts/Avenir.ttc"


<YahtzeeGame>:
    id: game
    gamestate: 0
    on_gamestate: self.change_game_state()
    instructions: "Start your game!"

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 2

        DiceLayer:
            id: dicelayer
            size_hint_y: 3


        Label:
            id: gameoverlabel
            text:





        DoTheThingButton:
            id: actionbutton
            text: game.instructions
            size: 200,50
            on_press: game.increment_game_state()
            font_size: self.height/4

            background_color: [26/265, 173/265, 163/265, 1]
            background_normal: ""
            background_down: "atlas://data/images/defaulttheme/button_pressed"
            background_disabled_normal: "atlas://data/images/defaulttheme/button"
            background_disabled_down: "atlas://data/images/defaulttheme/button"


    ScoreCard:
        id: scorecard 
        orientation: "vertical"



<Dice>:
    number: 6
    source: "images/up_state/dice6.png"
    padding: 0,0
    disabled: True
    on_state: self.get_image()


                    

<ScoreCard>:
               


<ScoreOption>:
    id: scoreoption
    # id will be overwritten
    value: 0
    used: False
    disabled: True
    on_used: self.swap_background()



    ToggleButton:
        id: button
        size_hint_x: 2
        markup: True
        text: self.parent.id
        background_color: [26/265, 173/265, 163/265, 1]
        background_normal: ""
        background_down: "atlas://data/images/defaulttheme/button_pressed"
        background_disabled_normal: "atlas://data/images/defaulttheme/button"
        background_disabled_down: "atlas://data/images/defaulttheme/button"
        group: "score_options_group"
        on_press: self.parent.parent.parent.gamestate = 4
        #I don't like this, but it won't let me do root???
        disabled: scoreoption.disabled
        
    Label:
        id: score_number
        text: str(scoreoption.value)
        disabled: scoreoption.disabled





                
            
